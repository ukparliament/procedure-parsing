<script src="https://d3js.org/d3.v4.min.js"></script>
<script src="https://unpkg.com/viz.js@1.8.0/viz.js" type="javascript/worker"></script>
<script src="https://unpkg.com/d3-graphviz@2.1.0/build/d3-graphviz.min.js"></script>
	
<%= content_tag( 'h1', 'Work package: parsed routes' ) %>

<%= render :partial => 'work_package_description' %>

<%= render :partial => 'view_switch' %>

<div id="graph"></div>
<script>
	var i = "digraph {<%= render :partial => 'node', :collection => @steps %><%= render :partial => 'edge', :collection => @routes %> }";
	var parser = new DOMParser;
	var dom = parser.parseFromString('<!doctype html><body>' + i, 'text/html');
	var decodedString = dom.body.textContent;
	d3.select("#graph").graphviz().renderDot(decodedString);
</script>