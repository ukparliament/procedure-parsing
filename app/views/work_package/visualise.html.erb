<script src="//d3js.org/d3.v5.min.js"></script>
<script src="https://unpkg.com/@hpcc-js/wasm@0.3.11/dist/index.min.js"></script>
<script src="https://unpkg.com/d3-graphviz@3.0.5/build/d3-graphviz.js"></script>
<div id="graph" style="text-align: center;"></div>
<script>
var i = "digraph {node [width=1 fixedsize=true shape=rectangle fontname=\"sans-serif\" fontsize=\"18\"]; <%= render :partial => 'node', :collection => @steps %><%= render :partial => 'edge', :collection => @routes %> }";
	var parser = new DOMParser;
	var dom = parser.parseFromString('<!doctype html><body>' + i, 'text/html');
	var decodedString = dom.body.textContent;
d3.select("#graph").graphviz().renderDot(decodedString);

</script>