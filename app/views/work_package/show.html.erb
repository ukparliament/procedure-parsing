
<h1>Work Package: <%= @work_package.triple_store_id %></h1>


<%= "#{link_to( 'Instrument', @work_package.web_link )} subject to the #{link_to( @work_package.parliamentary_procedure.name, procedure_show_url( :procedure => @work_package.parliamentary_procedure ) )} procedure.".html_safe %>

<%= content_tag( 'h2', 'Things that have happened' ) %>

<%= content_tag( 'p', "Steps actualised by with business items having a date in the past, or today." ) %>
<section>
	<%= render :partial => 'business_item/business_item', :collection => @work_package.business_items_that_have_happened %>
</section>

<%= content_tag( 'h2', 'Things that are scheduled to happen' ) %>

<%= content_tag( 'p', "Steps actualised with business items having a date in the future." ) %>
<ol>
	<%= render :partial => 'business_item/business_item', :collection => @work_package.business_items_that_are_scheduled_to_happen %>
</ol>

<%= content_tag( 'h2', 'Things that may have happened or may be scheduled to happen' ) %>
<%= content_tag( 'p', "Steps actualised with business items having no date." ) %>
<ol>
	<%= render :partial => 'business_item/business_item', :collection => @work_package.business_items_unknown %>
</ol>

<%= content_tag( 'h2', 'Things that should happen' ) %>

<%= content_tag( 'p', "Steps with an input of 'TRUE' once the procedure map has been parsed." ) %>
<ol>
	<%= render :partial => 'step/step', :collection => @caused_steps %>
</ol>

<%= content_tag( 'h2', 'Things that may happen' ) %>

<%= content_tag( 'p', "Steps with an input of 'ALLOWS' once the procedure map has been parsed." ) %>
<ol>
	<%= render :partial => 'step/step', :collection => @allowed_steps %>
</ol>

<%= content_tag( 'h2', 'Things that should not now happen' ) %>

<%= content_tag( 'p', "Steps with an input of 'UNTRAVSERSABLE' once the procedure map has been parsed." ) %>
<ol>
	<%= render :partial => 'step/step', :collection => @disallowed_now_steps %>
</ol>

<%= content_tag( 'h2', 'Things that should not yet happen' ) %>

<%= content_tag( 'p', "Steps with an input of 'NULL' or 'FALSE' once the procedure map has been parsed." ) %>
<ol>
	<%= render :partial => 'step/step', :collection => @disallowed_yet_steps %>
</ol>