<%= content_tag( 'h1', 'Steps' ) %>

<%= render :partial => 'step', :collection => @steps %>

<%= content_tag( 'h2', 'Add a new step' ) %>
<%= form_tag :action => 'create' do |f| %>
	<%= text_field "step", "name", "size" => 20 %>
	<%= text_area "step", "description", "size" => 255 %>
	<%= select( "step", "step_type_id", @step_types.collect {|st| [ st.name, st.id ] }) %>
	<%= submit_tag( "Create" ) %>
<% end %>